<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TxtItemFilter">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey_filter</item>
    </style>

    <style name="TxtItemMovieName">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey_movie_name</item>
        <item name="android:textAppearance">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtItemMovieRating">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_rating</item>
        <item name="android:textAppearance">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtItemCastName">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtItemCastRole">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9A9BB2</item>
        <item name="android:textAppearance">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>


</resources>