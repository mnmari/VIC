<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TxtItemTblMenu" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="android:textColor">@color/grey_1</item>
    </style>

    <style name="TxtItemGenre">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="ChipGenre" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="ChipGenreMovieDetail" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_background_color</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="TxtItemMovieName">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="android:textColor">@color/grey_2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtItemMovieNameSmall">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/xmedium_sp</item>
        <item name="android:textColor">@color/grey_2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtItemUserRating">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtItemCastName">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtItemCastRole">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9A9BB2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SquareFabShapeOverlay" parent="ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="MovieDetailActivityCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceMovieDetailActivityCardCorners</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ShapeAppearanceMovieDetailActivityCardCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="TxtMovieDetailUserRating">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/xxsmall_sp</item>
        <item name="android:textColor">@color/grey_movie_detail</item>
    </style>

    <style name="TxtItemMovieDetailInfo">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="android:textColor">@color/grey_movie_detail</item>
    </style>

    <style name="TxtItemMovieDetailHeading2">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="android:textColor">@color/grey_2</item>
    </style>

    <style name="TxtBtnReturnToHomeActivity">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/small_dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>