<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/small_dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCast"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/white"
        tools:src="@drawable/cast_1"/>

    <TextView
        android:id="@+id/txtCastName"
        style="@style/TxtItemCastName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxWidth="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgCast"
        tools:text="Christian Bale" />

    <TextView
        android:id="@+id/txtCastRole"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxWidth="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCastName"
        style="@style/TxtItemCastRole"
        tools:text="Ken Miles"/>

</androidx.constraintlayout.widget.ConstraintLayout>